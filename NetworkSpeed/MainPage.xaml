<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NetworkSpeed.MainPage"
             Title="Network speed test">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
            <Button Text="Get network speed" Clicked="Button_Clicked" FontSize="Large" HorizontalOptions="CenterAndExpand" />
            <Label x:Name="SpeedResultLabel" FontSize="Medium" HorizontalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
